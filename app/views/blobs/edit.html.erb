<%= turbo_frame_tag "edit_blob" do %>
  <%= tag.div class: 'row justify-content-center' do %>
    <%= tag.div class: 'col-12 col-md-10 col-lg-8' do %>
      <h1>Edit Blob</h1>
      <h6><%= blob.id %></h6>
      <div class="d-flex">
        <%= button_to "Destory", blob_path(blob), method: :delete, class: 'btn btn-danger btn-sm', data: {turbo_method: :delete}, form_class: ''  %>
      </div>
      <div class="card shadow-sm">
        <%= image_tag blob.thumbnail_key || blob.key, class: 'card-img-top' %>
      </div>
      <%= turbo_frame_tag blob do %>
        <%= render 'form' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>