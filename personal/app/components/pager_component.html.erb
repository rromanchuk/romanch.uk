<nav>
  <ul class="pagination">
    <li class="page-item">
      <% if dr_pagy&.prev %>
        <%= link_to(
          "< Previous page",
          prev_path,
          class: "page-link",
          data: {
            turbo_action: "advance"
          }
        ) %>
      <% end %>
    </li>
    <li class="page-item">
      <% if dr_pagy&.next %>
        <%= link_to(
          "Next page >",
          next_path,
          class: "page-link",
          data: {
            turbo_action: "advance"
          }
        ) %>
      <% end %>
    </li>
  </ul>
</nav>
