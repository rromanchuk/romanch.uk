<%= simple_form_for tournament, html: { data: {turbo_frame: :_top} } do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :ocurred_on, as: :date, html5: true %>
  <%= f.input :newsletter %>
  <%= f.input :location %>
  <%= f.input :city %>
  <%= f.file_field :poster %>
  <%= f.submit class: "btn-primary" %>
<% end %>
