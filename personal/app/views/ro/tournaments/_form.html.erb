<% if tournament.poster.attached? %>
  <%= image_tag cdn_image_path(tournament.poster), class: 'img-fluid', width: 300 %>
<% end %>
<%= simple_form_for tournament, html: { data: {turbo_frame: :_top} } do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :ocurred_on, as: :date, html5: true %>
  <%= f.input :location %>
  <%= f.input :city %>
  <%= f.association :images %>
  <%= f.association :players %>
  <%= f.file_field :poster %>
  <%= f.file_field :newsletter %>
  
  <%= f.submit class: "btn-primary" %>
<% end %>
