<table class="table table-striped table-sm">
  <thead>
    <tr>
      <% RomanchukOpen::Tournament.attribute_names.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  <thead>
  <tbody>
    <% tournaments.each do |t| %>
      <tr>
        <% RomanchukOpen::Tournament.attribute_names.each do |header| %>
          <td class="text-break "><%= t.send(header) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
<% tournaments.each do |t| %>
  <div class="col">
    <div class="card">
      <%= link_to romanchuk_open_tournament_path(t) do %>
        <%= image_tag 'romanchuk_open/1985/1.jpg', class: 'card-img' %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">1985</h5>
        
      </div>
    </div>
  </div>
<% end %>
</div>
