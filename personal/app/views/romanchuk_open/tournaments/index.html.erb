<% content_for :page_title, 'The Romanchuk Open' %>

<section>
  <div class="row py-lg-5 py-5 text-center container">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">34th Annual Romanchuk Open</h1>
      <p class="lead text-muted">July 2022</p>
      <p>
        <!--<a href="#" class="btn btn-primary my-2">Main call to action</a> -->
        <!--<a href="#" class="btn btn-secondary my-2">Secondary action</a> -->
      </p>
    </div>
  </div>
</section>

<section class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% tournaments.each do |t| %>
        <div class="col">
          <div class="card">
            <%= link_to romanchuk_open_tournament_path(t) do %>
              <%= image_tag "#{t.images.first&.key}", class: 'card-img' %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= "#{t.title} #{t.ocurred_on&.year}" %></h5>
              <a href="" class="card-link">Newsletter</a>
              <a href="" class="card-link">Players</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>