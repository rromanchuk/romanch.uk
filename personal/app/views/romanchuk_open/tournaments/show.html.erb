<div class="d-flex">
  <%= link_to "Edit", edit_romanchuk_open_tournament_path(tournament), class: 'btn btn-link btn-sm', data: { turbo_action: "replace" } %>
  <%= button_to "Destory", romanchuk_open_tournament_path(tournament), method: :delete, class: 'btn btn-danger btn-sm', data: {turbo_method: :delete}, form_class: ''  %>
</div>
<h1><%= tournament.title %></h1>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <% tournament.images.each do |image| %>
    <div class="col">
      <div class="card shadow-sm">
        <%= image_tag image.key, class: 'card-img-top' %>
        <div class="card-body">
        <%= image.key %>
        </div>
      </div>
    </div>
  <% end %>
</div>