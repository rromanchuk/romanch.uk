<h1><%= tournament.title %></h1>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <% tournament.images.each do |image| %>
    <div class="col">
      <div class="card shadow-sm">
        <%= image_tag "/#{image.key}", class: 'card-img-top' %>
        <div class="card-body">
        <%= image.key %>
        </div>
      </div>
    </div>
  <% end %>
</div>