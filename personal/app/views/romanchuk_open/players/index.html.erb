<% content_for :page_title, "All players" %>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <% RomanchukOpen::Player.attribute_names.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  <thead>
  <tbody>
    <% players.each do |player| %>
      <tr>
        <% RomanchukOpen::Player.attribute_names.each do |header| %>
          <td class="text-break "><%= player.send(header) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

