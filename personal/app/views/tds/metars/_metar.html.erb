<%= turbo_frame_tag metar do %>
  <div class="col pb-3">
    <table class="table table-borderless table-sm fluid">
      <tbody class="">
        <tr class="">
          <%# <td class="w-25 fw-semibold">PIREP Text</td> %>
          <td colspan="2" class="">
            <span class=""><%= link_to metar.raw_text, tds_metar_path(metar), data: {turbo_frame: :_top} %><span>
              </td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">From batch</td>
              <td class=""><%= link_to metar.batch.key, tds_batch_path(metar.batch), data: {turbo_frame: :_top}  %></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Observed at</td>
              <td class=""><%= time_tag metar.observation_time %> <span class="text-muted">(<%= time_ago_in_words(metar.observation_time) %> ago)</span></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Identifier</td>
              <td class=""><%= link_to metar.station_id, tds_metars_path(station_id: metar.station_id), data: {turbo_action: :advance, turbo_frame: :metars} %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
