<%= turbo_frame_tag airep do %>
  <div class="col pb-3">
    <table class="table table-borderless table-sm fluid">
      <tbody class="">
        <tr class="">
          <%# <td class="w-25 fw-semibold">PIREP Text</td> %>
          <td colspan="2" class="bg-light">
            <span class=""><%= link_to airep.raw_text, tds_airep_path(airep), data: {turbo_frame: :_top} %><span>
              </td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">From batch</td>
              <td class=""><%= link_to airep.batch.id, tds_batch_path(airep.batch), data: {turbo_frame: :_top}  %></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Observed at</td>
              <td class=""><%= time_tag airep.observation_time %> <span class="text-muted">(<%= time_ago_in_words(airep.observation_time) %> ago)</span></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Reported by:</td>
              <td class=""><%= airep.aircraft_ref %></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Location:</td>
              <td class=""><%= link_to airep.location.to_s, map_tds_airep_path(airep), data: {turbo_action: :advance} %></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Flight level:</td>
              <td class=""><%= airep.altitude_ft_msl %></td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Wind:</td>
              <td class=""><%= airep.wind_dir_degrees.to_s.rjust(3, '0') %>Â° @ <%= airep.wind_speed_kt %>knots</td>
            </tr>
            <tr class="">
              <td class="w-25 fw-semibold">Temp:</td>
              <td class=""><%= airep.temp_c %>C</td>
            </tr>
            <% unless airep.sky_condition.blank? %>
              <tr class="">
                <td class="w-25 fw-semibold">Sky Conditions</td>
                <td class=""><%= airep.sky_condition %></td>
              </tr>
            <% end %>
            <% unless airep.icing_condition.blank? %>
              <tr class="">
                <td class="w-25 fw-semibold">Icing Conditions</td>
                <td class=""><%== airep.icing_condition.to_json %></td>
              </tr>
            <% end %>
            <% unless airep.icing_condition.blank? %>
              <tr class="">
                <td class="w-25 fw-semibold">Turbulance Conditions</td>
                <td class=""><%= airep.turbulence_condition %></td>
              </tr>
            <% end %>
            <tr class="">
              <td class="w-25 fw-semibold">Remarks</td>
              <td class=""><%= airep.remarks %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
