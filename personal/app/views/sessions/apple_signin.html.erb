<%= turbo_frame_tag "apple_signin" do %>
  <%= render ModalComponent.new(title: "Who are you?", size: "", close_footer: false) do |component| %>
    <% component.body do %>
      <div class="d-flex justify-content-center">
        <%= link_to oauth_cognito_authorize_apple_path, data: { turbo: false } do %>
          <img src='/static/continue_with_apple.png' class='img-fluid'>
        <% end %>
      <div>
    <% end %>
  <% end %>
<% end %>