<%= provide :page_title, 'Most recent TAFs' %>

<%= form_with(url: wx_tafs_path, method: :get, data: {controller: "search", search_target: "form", turbo_frame: 'tafs'}, class: 'd-flex') do |f| %>
  <%= f.text_field(:station_id, class: "form-control", placeholder: "Location ID...", data: {action: 'input->search#submit', search_target: 'input'}) %>
<% end %>

<%= turbo_frame_tag :tafs do %>
  <%= render tafs %>
  <%# Helper Dependency Updated: Sep 14, 2022 at 4pm %>
  <%= render PagerComponent.new(dr_pagy, previous_path: wx_tafs_path(page: dr_pagy.prev, filter: params[:filter]), next_path: wx_tafs_path(page: dr_pagy.next, filter: params[:filter])) %>
<% end %>
