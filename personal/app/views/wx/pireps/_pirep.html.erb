
<%= turbo_frame_tag pirep do %>
<div class="col pb-3">
  <table class="table table-borderless table-sm fluid">
    <tbody class="">
      <tr class="">
        <%# <td class="w-25 fw-semibold">PIREP Text</td> %>
        <td colspan="2" class="bg-warning <%= pirep.urgent? ? 'bg-gradient' : 'bg-light' %>">
          <span class=""><%= link_to pirep.raw_text, wx_pirep_path(pirep), data: {turbo_frame: :_top} %><span>
        </td>
      </tr>
      <tr class=""> 
        <td class="w-25 fw-semibold">From batch</td>
        <td class=""><%= link_to pirep.batch.id, wx_batch_path(pirep.batch) %></td>
      </tr>
      <tr class=""> 
        <td class="w-25 fw-semibold">Observed at</td>
        <td class=""><%= time_tag pirep.observation_time %> <span class="text-muted">(<%= time_ago_in_words(pirep.observation_time) %> ago)</span></td>
      </tr>
      <tr class="">
        <td class="w-25 fw-semibold">Aircraft type:</td>
        <td class=""><%= pirep.aircraft_ref %></td>
      </tr>
      <tr class="">
        <td class="w-25 fw-semibold">Location</td>
        <td class=""><%= pirep.location.to_s %></td>
      </tr>
      <tr class="">
        <td class="w-25 fw-semibold">Flight level:</td>
        <td class=""><%= pirep.altitude_ft_msl %></td>
      </tr>
      <% unless pirep.sky_condition.blank? %>
        <tr class="">
          <td class="w-25 fw-semibold">Sky Conditions</td>
          <td class=""><%= pirep.sky_condition %></td>
        </tr>
      <% end %>
      <% unless pirep.icing_condition.blank? %>
        <tr class="">
          <td class="w-25 fw-semibold">Icing Conditions</td>
          <td class=""><%== pirep.icing_condition.to_json %></td>
        </tr>
      <% end %>
      <% unless pirep.icing_condition.blank? %>
        <tr class="">
          <td class="w-25 fw-semibold">Turbulance Conditions</td>
          <td class=""><%= pirep.turbulence_condition %></td>
        </tr>
      <% end %>
      <tr class="">
        <td class="w-25 fw-semibold">Remarks</td>
        <td class=""><%= pirep.remarks %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>