<%= turbo_frame_tag batch do %>
  <div class="col pb-3 ">
    <table class="table table-borderless table-sm responsive">
      <tbody class="">
        <tr class="">
          <td class="w-25 fw-semibold">id</td>
          <td class="">
            <%= link_to batch.id, wx_batch_path(batch), data: {turbo_frame: :_top} %>
            <%= link_to 'debug', debug_wx_batch_path(batch), data: {turbo_frame: :_top}, class: "fs-6 text-muted fw-lighter text-decoration-none" %>
          </td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Created at</td>
          <td class=""><%= batch.created_at %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Source type</td>
          <td class=""><%= batch.report_type %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Source url</td>
          <td class=""><%= batch.source_url %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Download url</td>
          <td class=""><%= link_to batch.public_url, batch.public_url, rel: "nofollow" %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Start time</td>
          <td class=""><%= batch.start_time %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">End time</td>
          <td class=""><%= batch.end_time %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Content length (file size)</td>
          <td class=""><%= number_to_human_size(batch.content_length) %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Destination key</td>
          <td class=""><%= batch.key %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">New records</td>
          <td class=""><%= number_with_delimiter(batch.num_records_processed) %></td>
        </tr>
        <tr class="">
          <td class="w-25 fw-semibold">Processed at</td>
          <td class=""><%= batch.processed_at %></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
