<!DOCTYPE html>
<html lang="en-us" >
  <head>
    <%= render 'shared/meta' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag *style_tags, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
    <%= yield :canonical_link_tag %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    <%= render 'application/favicon' %>
  </head>

  <body>
    <%= render 'shared/noscript' %>
    <div class="container">
      <%= render 'shared/nav' %>
      <%= yield %>
    </div>
    
    <%= yield :offcanvas %>
    <%= turbo_frame_tag "modal" %>

    <script type="module">
      import {hljs} from 'application'
      hljs.highlightAll();
    </script>
  </body>
</html>