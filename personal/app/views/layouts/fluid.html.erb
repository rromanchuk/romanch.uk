<!DOCTYPE html>
<html lang="en-us" >
  <head>
    <%= render 'shared/meta' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag *style_tags, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    
  </head>

  <body>
    <%= render 'shared/noscript' %>
    <div class="container">
      <%= render 'shared/nav' %>
      <%= yield %>
      <div id="toasts" class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <% flash.each do |key, value| %>
          <%= render 'shared/toast', body: value %>
        <% end %>
      </div>
    </div>
    
    <%= yield :offcanvas %>
    <%= turbo_frame_tag "modal" %>
    <%= render 'shared/footer' %>
    <script type="module">
      import {hljs} from 'application'
      hljs.highlightAll();
    </script>
  </body>
</html>