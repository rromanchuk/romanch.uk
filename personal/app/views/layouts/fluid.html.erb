<!DOCTYPE html>
<html lang="en-us" >
  <head>
    <%= render 'shared/meta' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag *style_tags, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    <%= render 'application/favicon' %>
    <script src="https://cdn.jsdelivr.net/npm/pdfjs-dist@2.13.216/build/pdf.min.js" data-turbo-track="reload"></script> 
    <script src="https://cdn.jsdelivr.net/npm/pdfjs-dist@2.13.216/web/pdf_viewer.js" data-turbo-track="reload"></script> 
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://metrics.romanch.uk/ns.html?id=GTM-MBP9J44"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="container">
      <%= render 'shared/nav' %>
      <%= yield %>
    </div>
    
    <%= yield :offcanvas %>
    <%= turbo_frame_tag "modal" %>

    <script type="module">
      import {hljs} from 'application'
      hljs.highlightAll();
    </script>
  </body>
</html>