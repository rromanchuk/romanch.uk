<!DOCTYPE html>
<html lang="en-us" class="h-100">
  <head>
    <%= render 'shared/meta' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag *style_tags, "data-turbo-track": "reload" %>
    
    <%= javascript_importmap_tags %>
    <% yield :head %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    <%= render 'application/favicon' %>

    <meta
      name="theme-color"
      content="#eeeeee"
      media="(prefers-color-scheme: dark)"
    />
    <meta
      name="theme-color"
      content="#111111"
      media="(prefers-color-scheme: light)"
    />

  </head>
  <body class="h-100 d-flex flex-column">
    <div class="container">
      <%= render 'shared/nav' %>
      <div class="grid">
        <main class="g-col-lg-8">
          
          <%= yield %>
        </main>
        <div class="g-col-lg-4">
          <% if current_user&.me? %>
            <%= render SearchComponent.new %>
            <%= render CategoriesComponent.new %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>