


<% content_for :offcanvas do %>
  <%= render OffCanvasComponent.new(target: "sourcePannel", title: "Source") do |component| %>
    <%= component.body do %>
      <%= tag.pre do %>
        <%= tag.code source, class: "language-latex", id: "code" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>


 <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid d-flex justify-content-end">
    <a class="navbar-brand" href="#">Home</a>
    <%= link_to "Download", asset_path('romanchuk.pdf'), class: "btn btn-primary me-2" %>
    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sourcePannel" aria-controls="sourcePannel">
      View latex source
    </button>
  </div>
</nav>

<%= render 'pdf' %>





